generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CreditCard {
  id          String @id @default(cuid())
  number      String
  expiry      String
  user_id     String
  document    String
  name        String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Payment {
  id              String @id @default(cuid())
  amount          Float
  user_id         String
  order_id        String
  status          String
  credit_card_id  String
  installments    Int  @default(1)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
}
